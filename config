####################< Modes >##################################################################################################


# resize window (you can also use the mouse for that)
bindsym $mod+Shift+r mode "resize"
mode "resize" {
        # These bindings trigger as soon as you enter the resize mode

        # Pressing left will shrink the window’s width.
        # Pressing right will grow the window’s width.
        # Pressing up will shrink the window’s height.
        # Pressing down will grow the window’s height.
        bindsym j resize shrink width 10 px or 5 ppt
        bindsym k resize grow height 10 px or 5 ppt
        bindsym l resize shrink height 10 px or 5 ppt
        bindsym semicolon resize grow width 10 px or 5 ppt

        # same bindings, but for the arrow keys
        bindsym Left resize shrink width 10 px or 10 ppt
        bindsym Down resize grow height 10 px or 10 ppt
        bindsym Up resize shrink height 10 px or 10 ppt
        bindsym Right resize grow width 10 px or 10 ppt

        # back to normal: Enter or Escape or $mod+r
        #bindsym Return mode "default"
        bindsym Escape mode "default"
        bindsym Return mode "default"
}




set $mode_files Explore [KP_Enter]CheatSheets [S]c_read [c]ourses [d]ownloads [h]ome [g]eneral [l]ibrary [m]ovies [w]ebDevelopment
bindsym $mod+e mode "$mode_files"
mode "$mode_files" 
{
	bindsym Escape mode "default"

	bindsym KP_Enter exec mimeopen ~/Library/CheatSheets, mode "default"
	bindsym Shift+b exec mimeopen ~/currently_reading/*, mode "default"
	bindsym a exec sudo mimeopen ~/, mode "default"
	bindsym g exec mimeopen ~/General, mode "default"
	bindsym s exec mimeopen ~/General/Songs, mode "default"
	bindsym Shift+s exec mpv --shuffle --volume 65 ~/General/Songs/*, mode "default"
	bindsym m exec mimeopen ~/General/Movies, mode "default"
	bindsym Shift+M exec mpv ~/General/Music/*, mode "default"
	bindsym c exec mimeopen ~/Library/Courses, mode "default"
	bindsym b exec mimeopen ~/Library/Books, mode "default"
	bindsym l exec mimeopen ~/Library, mode "default"
	bindsym h exec mimeopen ~/, mode "default"
	bindsym d exec mimeopen ~/Downloads, mode "default"

	bindsym k exec kill -9 $(pidof mpv)
}

#Run differnt power related commands using shortcuts
set $mode_power Power: [End]:hibernate log[o]ut [l]ock [r]eboot [s]hutdown 
bindsym $mod+End mode "$mode_power"
mode "$mode_power" {

	bindsym Escape mode "default"

	bindsym o exec i3-msg exit, mode "default"
	bindsym s exec systemctl poweroff
	bindsym r exec sudo reboot
	bindsym End exec sudo hibernate, mode "default"
	bindsym l exec i3lock -i $(ls ~/wallpapers/*.png | shuf -n1 ), mode "default"

}



#Automate some trivial tasks
set $mode_automation Automation [b]luetooth [w]ifi_Scan
bindsym $mod+a mode "$mode_automation
mode "$mode_automation" {

	bindsym Escape mode "default"	
	
	#Connect and disconnect bluetooth headphones
	bindsym b exec ~/myScripts/chp, mode "default"
	bindsym Shift+b exec bluetoothctl disconnect, mode "default"
	
	#run and stop torrent client deamon in the background. Interface on 'localhost:9091'
	bindsym t exec transmission-daemon, mode "default"
	bindsym Shift+t exec kill -9 $(pidof transmission-daemon), mode "default"

	#scan for wifi networks using airodump-ng utility
	bindsym w exec terminator -x ~/myScripts/wScan, mode "default"
}



#Some files on the system which are edited frequently
set $mode_edit Edit [i]3config [a]liases [v]isudo
bindsym $mod+i mode "$mode_edit"
mode "$mode_edit" {
	bindsym Escape mode "default"
	bindsym v exec terminator -x sudo visudo, mode "default"
	bindsym i exec terminator -T file_edit -x vim ~/.config/i3/config, mode "default"
	bindsym a exec terminator -T file_edit -x vim ~/.bash_aliases, mode "default"

}

#Another automation-like mode to get updates for differnt onlines
set $mode_updates Get Updates: [a]pt [w]eather 
bindsym $mod+u mode "$mode_updates"
mode "$mode_updates"
{
	bindsym Escape mode "default"
	bindsym w exec terminator -p hold_open -f -T Weather -x curl wttr.in/gujrat, mode "default"
	bindsym a exec terminator -p hold_open -T "Apt Update" -x sudo apt update, mode "default"
}

